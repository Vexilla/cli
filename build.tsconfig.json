{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "rootDir": "./src",
    "listFiles": true,
    "newLine": "LF",
    "noEmitOnError": true,
    "esModuleInterop": true,
    "outDir": "./bin"
  },
  "exclude": ["./node_modules/**/*"],
  "include": ["./src/**/*.ts"]
}
